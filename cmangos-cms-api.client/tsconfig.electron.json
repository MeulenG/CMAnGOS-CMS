{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "dist-electron",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "electron/**/*.ts"
  ]
}
