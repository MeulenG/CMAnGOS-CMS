{
  "compilerOptions": {
    "outDir": "dist-electron",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": false
  },
  "include": [
    "electron/**/*.ts"
  ],
  "exclude": [
    "electron/preload.ts"
  ]
}
